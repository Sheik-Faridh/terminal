{
  "compilerOptions": {
    "outDir": "./build/",
    "lib": ["es6", "dom"],
    "typeRoots": ["node_modules/@types"],
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "esnext",
    "target": "es2015",
    "allowJs": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
    "types": ["node"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
